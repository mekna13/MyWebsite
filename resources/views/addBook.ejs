<div class="addProject">
    <h2>Add Book</h2>
    <form action="/addBook" method="POST">
        <%  if(messages.error) { %> 
            <span><%=  messages.error %> </span>
        <% }  %> 
        <div class="mb-3">
          <label for="title" class="form-label">Book Title</label>
          <input type="text" class="form-control" name="title">
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author Name</label>
            <input type="text" class="form-control" name="author">
          </div>
        <div class="mb-3">
          <label for="review" class="form-label">Write Review</label>
          <textarea class="form-control" name="review" rows="5"></textarea>
        </div>
        <div class="mb-3">
            <label for="bookCoverLink" class="form-label">Book Cover Link</label>
            <input type="text" class="form-control" name="bookCoverLink">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>