<div class="pContainer">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <img src="/uploads/<%= project.img %> " alt="">
            </div>
            <div class="col-sm">
                <h3><%= project.title %></h3>
                <p><%= project.description %> </p>
                <a href="<%= project.directLink %>" target="_blank"><button>View Hosted Project</button></a>
                <a href="<%= project.github %>" target="_blank"><button><i class="fab fa-github"></i></button></a>
                <% if(user){ %>
                    <a href="/editProject/<%= project._id %> ">
                        <button>Edit Project</button>
                    </a>
                <% } %> 
            </div>
        </div>
    </div>
</div>