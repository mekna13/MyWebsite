<div class="addProject">
    <div class="row">
        <div class="col align-self-start"></div>
        <div class="col align-self-center">
            <h2>Edit Book</h2>
        </div>
        <div class="col align-self-end  d-flex justify-content-end">
            <form action="/editBook/<%= book._id %>?_method=DELETE" method="POST" class="delForm">
                <button type="submit" ><i class="fas fa-trash"></i></button>
            </form>
        </div>
    </div>
    <form action="/editBook/<%= book._id %>?_method=PUT" method="POST">
        <%  if(messages.error) { %> 
            <span><%=  messages.error %> </span>
        <% }  %> 
        <div class="mb-3">
          <label for="title" class="form-label">Book Title</label>
          <input type="text" class="form-control" name="title" value="<%= book.title %> " >
        </div>
        <div class="mb-3">
            <label for="author" class="form-label">Author Name</label>
            <input type="text" class="form-control" name="author" value="<%= book.author %> ">
          </div>
        <div class="mb-3">
          <label for="review" class="form-label">Write Review</label>
          <textarea class="form-control" name="review" rows="5" ><%= book.review %> </textarea>
        </div>
        <div class="mb-3">
            <label for="bookCoverLink" class="form-label">Book Cover Link</label>
            <input type="text" class="form-control" name="bookCoverLink" value="<%= book.bookCoverLink %>">
        </div>
        <div class="d-flex justify-content-center"><button type="submit">Submit</button></div>
      </form>

      
</div>