<div class="pContainer">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <img src="<%= book.bookCoverLink %>" alt="">
            </div>
            <div class="col-sm">
                <h3><%= book.title %> </h3>
                <h4><%= book.author %> </h4>
                <p><%= book.review %> </p>
                <% if(user){ %>
                    <a href="/editBook/<%= book._id %> ">
                        <button>Edit Review</button>
                    </a>
                <% } %>  
            </div>
        </div>
    </div>
</div>